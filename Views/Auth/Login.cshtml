<div class="login-page">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h3 class="mb-3">Đăng nhập</h3>
      <div class="bg-white shadow rounded">
        <div class="row">
          <div class="col-md-7 pe-0">
            <div class="form-left h-100 py-5 px-5">
              <form
                method="post"
                asp-controller="Auth"
                asp-action="Login"
                class="row g-4"
              >
                <div class="col-12">
                  <label
                    >Email/Số điện thoại<span class="text-danger"
                      >*</span
                    ></label
                  >
                  <div class="input-group">
                    <div class="input-group-text">
                      <i class="bi bi-person-fill"></i>
                    </div>
                    <input
                      name="phoneOrEmail"
                      type="text"
                      class="form-control"
                      placeholder="Nhập email hoặc số điện thoại"
                    />
                  </div>
                </div>

                <div class="col-12">
                  <label>Mật khẩu<span class="text-danger">*</span></label>
                  <div class="input-group">
                    <div class="input-group-text">
                      <i class="bi bi-lock-fill"></i>
                    </div>
                    <input
                      name="password"
                      type="password"
                      class="form-control"
                      placeholder="Nhập mật khẩu"
                    />
                  </div>
                </div>

                <!-- <div class="col-sm-6">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="inlineFormCheck"
                    />
                    <label class="form-check-label" for="inlineFormCheck"
                      >Nhớ mật khẩu</label
                    >
                  </div>
                </div> -->

                <!-- <div class="col-sm-6">
                  <a href="#" class="float-end text-primary">Quên mật khẩu?</a>
                </div> -->

                <div class="col-12">
                  <button
                    type="submit"
                    class="btn btn-primary px-4 float-end mt-4"
                  >
                    Đăng nhập
                  </button>
                </div>
              </form>
            </div>
          </div>
          <div class="col-md-5 ps-0 d-none d-md-block">
            <div
              class="form-right h-100 bg-primary text-white text-center pt-5"
            >
              <img
                class="w-50 text-white"
                src="~/assets/images/logo.svg"
                alt="logo"
              />
              <h2 class="fs-1">Chào mừng trở lại!!!</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
